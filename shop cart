    <script>
        // Payment method selection
        document.querySelectorAll('.payment-method').forEach(method => {
            method.addEventListener('click', function() {
                const methodType = this.getAttribute('data-method');
                
                // Update selected state
                document.querySelectorAll('.payment-method').forEach(m => m.classList.remove('selected'));
                this.classList.add('selected');
                
                // Show/hide payment details
                document.querySelectorAll('.payment-details').forEach(details => {
                    details.classList.add('hidden');
                });
                
                document.getElementById(`${methodType}-details`).classList.remove('hidden');
            });
        });

        // PayPal button click handler
        document.querySelector('.paypal-button').addEventListener('click', function() {
            // Redirect to PayPal login page
            window.location.href = 'https://www.paypal.com/signin';
        });

        // Form validation and submission
        document.querySelector('.place-order-btn').addEventListener('click', function(e) {
            e.preventDefault();
            
            // Check if PayPal is selected
            const isPayPal = document.querySelector('.payment-method[data-method="paypal"]').classList.contains('selected');
            if (isPayPal) {
                // Trigger PayPal button click
                document.querySelector('.paypal-button').click();
                return;
            }
            
            // Simple validation for credit card
            const requiredFields = document.querySelectorAll('#credit-card-details input[required], #credit-card-details select[required]');
            let isValid = true;
            
            requiredFields.forEach(field => {
                if (!field.value) {
                    isValid = false;
                    field.style.borderColor = 'var(--text-red)';
                } else {
                    field.style.borderColor = 'rgba(255, 255, 255, 0.1)';
                }
            });
            
            if (isValid) {
                // Show success message
                alert('Order placed successfully! Thank you for your purchase.');
                // Redirect to confirmation page (would be implemented in a real site)
                // window.location.href = 'confirmation.html';
            }
        });
    </script>
